Content-Type: application/json

{
  "nik": "1234567890123456",
  "faskesUtama": "RS Umum Daerah",
  "kelasPerawatan": "KELAS I",
  "tanggalDaftar": "2024-01-01"
}

###

# PUT - Update data BPJS
PUT {{sima_Bpjs_api_HostAddress}}/api/Bpjs/1
Content-Type: application/json

{
  "idBpjs": 1,
  "nik": "1234567890123456",
  "faskesUtama": "RS Umum Daerah",
  "kelasPerawatan": "KELAS II",
  "tanggalDaftar": "2024-01-01"
}

###

# DELETE - Hapus data BPJS
DELETE {{sima_Bpjs_api_HostAddress}}/api/Bpjs/1

