### ===== AUTH =====

# GET - Test API
GET {{sima_Bpjs_api_HostAddress}}/api/Auth/test
Accept: application/json

###

# POST - Register user baru
POST {{sima_Bpjs_api_HostAddress}}/api/Auth/register
Content-Type: application/json

{
  "username": "userdemo",
  "password": "P@ssw0rd!",
  "nik": "1234567890123456",
  "role": "USER"
}

###

# POST - Login (dapatkan JWT)
POST {{sima_Bpjs_api_HostAddress}}/api/Auth/login
Content-Type: application/json

{
  "username": "userdemo",
  "password": "P@ssw0rd!"
}

###

# Contoh penggunaan Bearer Token untuk endpoint terproteksi
GET {{sima_Bpjs_api_HostAddress}}/api/Bpjs
Authorization: Bearer {{token}}
Accept: application/json

### ===== ADMIN ACTIONS (butuh role ADMIN) =====

# Approve peserta BPJS -> AKTIF
POST {{sima_Bpjs_api_HostAddress}}/api/Bpjs/1/approve
Authorization: Bearer {{token}}

###

# Nonaktifkan peserta BPJS -> NONAKTIF
POST {{sima_Bpjs_api_HostAddress}}/api/Bpjs/1/deactivate
Authorization: Bearer {{token}}
